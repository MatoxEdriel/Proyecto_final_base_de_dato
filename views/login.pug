doctype html
html
  head
    title Login - Labra
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="/css/style.css")
    // Estilos extra para el link
    style.
      .forgot-link { display: block; text-align: center; margin-top: 15px; color: #666; text-decoration: none; font-size: 0.9em; }
      .forgot-link:hover { color: #000; text-decoration: underline; }

  body.login-body
    .login-box
      .logo-container
        // Asegurate de que la imagen exista o quita esta línea si da error
        img.logo(src="/assets/labralogo.png" alt="Logo")
      
      h2 Bienvenido
      p.subtitle Inicia sesión en tu punto de venta

      if error
        .error-message
          span ⚠️ #{error}
      
      if success
        .success-message(style="color: green; text-align: center; margin-bottom: 10px;")
          span ✅ #{success}

      form(action="/login" method="POST")
        .input-group
          label Usuario
          input(type="text" name="user_name" placeholder="Ej: gcampoverde" required)
        
        .input-group
          label Contraseña
          input(type="password" name="password" placeholder="••••••••" required)

        button.btn-login(type="submit") Ingresar al Sistema
      
      a.forgot-link(href="/forgot-password") ¿Olvidaste tu contraseña?